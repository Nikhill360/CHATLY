<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5 flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-5 px-4">
      <img class="w-1/2" src="/images/logo.png" alt="InstaClone Logo">
      <form class="w-full" action="/register" method="post">
        <div class="mb-4">
          <input class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="text" placeholder="Username" name="username" required>
        </div>
        <div class="mb-4">
          <input class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="email" placeholder="Email" name="email" required>
        </div>
        <div class="mb-4">
          <input class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="text" placeholder="Name" name="name" required>
        </div>
        <div class="mb-4">
          <input class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="password" placeholder="Password" name="password" required>
        </div>
        <div class="mb-4">
          <input class="w-full bg-blue-500 px-3 py-3 rounded-md" type="submit" value="Create Account">
        </div>
      </form>
      <div class="text-center">
        <p>Already have an account? <a href="/login" class="text-blue-500">Log In</a></p>
      </div>
    </div>
  </div>
<% include ./partials/footer.ejs %>